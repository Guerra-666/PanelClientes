---
import Card from "../Card.astro";

export interface Props {
  clientData: {
    companyName: string;
    businessName: string;
    rfc: string;
    taxRegime: string;
    industry: string;
    companySize: string;
    website: string;
  };
}

const { clientData } = Astro.props;
---

<Card>
  <div class="px-4 sm:px-6 lg:px-8 py-4 sm:py-5 lg:py-6 border-b border-gray-200">
    <h3 class="text-lg sm:text-xl font-semibold text-gray-900 flex items-center">
      <svg class="h-5 w-5 sm:h-6 sm:w-6 mr-2 sm:mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
      </svg>
      Información de la Empresa
    </h3>
  </div>
  
  <div class="p-4 sm:p-6 lg:p-8 space-y-4 sm:space-y-5 lg:space-y-6">
    <div>
      <label class="text-sm sm:text-base font-medium text-gray-500 block mb-1 sm:mb-2">Razón Social</label>
      <p class="text-sm sm:text-base font-semibold text-gray-900">{clientData.companyName}</p>
    </div>
    
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-6">
      <div>
        <label class="text-sm sm:text-base font-medium text-gray-500 block mb-1 sm:mb-2">Nombre Comercial</label>
        <p class="text-sm sm:text-base text-gray-900">{clientData.businessName}</p>
      </div>
      <div>
        <label class="text-sm sm:text-base font-medium text-gray-500 block mb-1 sm:mb-2">RFC</label>
        <p class="text-sm sm:text-base font-mono bg-gray-100 p-2 sm:p-3 rounded">{clientData.rfc}</p>
      </div>
    </div>
    
    <div>
      <label class="text-sm sm:text-base font-medium text-gray-500 block mb-1 sm:mb-2">Régimen Fiscal</label>
      <p class="text-sm sm:text-base text-gray-900">{clientData.taxRegime}</p>
    </div>
    
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-6">
      <div>
        <label class="text-sm sm:text-base font-medium text-gray-500 block mb-1 sm:mb-2">Industria</label>
        <p class="text-sm sm:text-base text-gray-900">{clientData.industry}</p>
      </div>
      <div>
        <label class="text-sm sm:text-base font-medium text-gray-500 block mb-1 sm:mb-2">Tamaño</label>
        <p class="text-sm sm:text-base text-gray-900">{clientData.companySize}</p>
      </div>
    </div>
    
    <div>
      <label class="text-sm sm:text-base font-medium text-gray-500 block mb-1 sm:mb-2">Sitio Web</label>
      <div class="flex items-center space-x-2 sm:space-x-3">
        <svg class="h-4 w-4 sm:h-5 sm:w-5 text-gray-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9m0 9c-5 0-9-4-9 9s4-9 9-9"/>
        </svg>
        <a href={`https://${clientData.website}`} class="text-sm sm:text-base text-blue-600 hover:underline truncate">
          {clientData.website}
        </a>
      </div>
    </div>
  </div>
</Card>
