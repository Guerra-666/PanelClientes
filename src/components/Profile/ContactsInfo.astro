---
import Card from "../Card.astro";

export interface Props {
  primaryContact: {
    name: string;
    position: string;
    email: string;
    phone: string;
    mobile: string;
  };
  additionalContacts: Array<{
    name: string;
    position: string;
    email: string;
    phone: string;
    department: string;
  }>;
}

const { primaryContact, additionalContacts } = Astro.props;

// Función para obtener iniciales
function getInitials(name: string): string {
  return name.split(' ').map(n => n[0]).join('');
}
---

<Card>
  <div class="px-4 sm:px-6 lg:px-8 py-4 sm:py-5 lg:py-6 border-b border-gray-200">
    <h3 class="text-2xl sm:text-3xl lg:text-4xl font-semibold text-gray-900 flex items-center">
      <svg class="h-5 w-5 sm:h-6 sm:w-6 mr-2 sm:mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
      </svg>
      Contactos
    </h3>
    <p class="text-base sm:text-lg lg:text-xl text-gray-600 mt-1 sm:mt-2">Contacto principal y contactos adicionales autorizados</p>
  </div>
  
  <div class="p-4 sm:p-6 lg:p-8 space-y-6 sm:space-y-7 lg:space-y-8">
    <!-- Contacto Principal -->
    <div>
      <label class="text-base sm:text-lg lg:text-xl font-medium text-gray-500 mb-3 sm:mb-4 block">Contacto Principal</label>
      <div class="flex flex-col sm:flex-row sm:items-center space-y-4 sm:space-y-0 sm:space-x-4 lg:space-x-6 p-4 sm:p-5 lg:p-6 bg-blue-50 rounded-lg border border-blue-200">
        <div class="h-16 w-16 sm:h-18 sm:w-18 lg:h-20 lg:w-20 rounded-full bg-blue-600 flex items-center justify-center text-white text-lg sm:text-xl font-semibold mx-auto sm:mx-0">
          {getInitials(primaryContact.name)}
        </div>
        <div class="flex-1 text-center sm:text-left">
          <h3 class="font-semibold text-lg sm:text-xl text-gray-900">{primaryContact.name}</h3>
          <p class="text-base sm:text-lg lg:text-xl text-gray-600 mt-1">{primaryContact.position}</p>
          <div class="mt-3 sm:mt-4 space-y-2">
            <div class="flex items-center justify-center sm:justify-start space-x-2 sm:space-x-3">
              <svg class="h-4 w-4 sm:h-5 sm:w-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
              <span class="text-base sm:text-lg lg:text-xl text-gray-900 truncate">{primaryContact.email}</span>
            </div>
            <div class="flex items-center justify-center sm:justify-start space-x-2 sm:space-x-3">
              <svg class="h-4 w-4 sm:h-5 sm:w-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
              <span class="text-base sm:text-lg lg:text-xl text-gray-900">{primaryContact.phone}</span>
            </div>
            <div class="flex items-center justify-center sm:justify-start space-x-2 sm:space-x-3">
              <svg class="h-4 w-4 sm:h-5 sm:w-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
              <span class="text-base sm:text-lg lg:text-xl text-gray-900">{primaryContact.mobile} (Móvil)</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Separador -->
    <div class="border-t border-gray-200"></div>

    <!-- Contactos Adicionales -->
    <div>
      <label class="text-base sm:text-lg lg:text-xl font-medium text-gray-500 mb-3 sm:mb-4 block">Contactos Adicionales</label>
      <div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-2 gap-3 sm:gap-4">
        {additionalContacts.map((contact) => (
          <div class="flex items-start space-x-3 sm:space-x-4 p-3 sm:p-4 bg-gray-50 rounded-lg">
            <div class="h-10 w-10 sm:h-12 sm:w-12 rounded-full bg-gray-300 flex items-center justify-center text-gray-700 text-base sm:text-lg lg:text-xl font-semibold">
              {getInitials(contact.name)}
            </div>
            <div class="flex-1 min-w-0">
              <h4 class="font-semibold text-base sm:text-lg lg:text-xl text-gray-900 truncate">{contact.name}</h4>
              <p class="text-xs sm:text-sm text-gray-600 mt-1 truncate">{contact.position}</p>
              <span class="inline-block px-2 sm:px-3 py-1 text-xs sm:text-sm text-gray-600 bg-white border border-gray-200 rounded-full mt-1 sm:mt-2">
                {contact.department}
              </span>
              <div class="mt-2 sm:mt-3 space-y-1 sm:space-y-2">
                <div class="flex items-center space-x-1.5 sm:space-x-2">
                  <svg class="h-3 w-3 sm:h-4 sm:w-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                  <span class="text-xs sm:text-sm text-gray-600 truncate">{contact.email}</span>
                </div>
                <div class="flex items-center space-x-1.5 sm:space-x-2">
                  <svg class="h-3 w-3 sm:h-4 sm:w-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                  </svg>
                  <span class="text-xs sm:text-sm text-gray-600">{contact.phone}</span>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</Card>
