---
import Card from '../Card.astro';

export interface Props {
  services: Array<{
    name: string;
    description: string;
    status: 'Activo' | 'Entregado' | 'Inactivo';
    startDate: string;
    endDate: string;
  }>;
}

const { services } = Astro.props;

const getStatusStyle = (status: string) => {
  switch(status) {
    case 'Activo': return 'bg-blue-600 text-white';
    case 'Entregado': return 'border border-gray-400 text-gray-600 bg-transparent';
    case 'Inactivo': return 'bg-gray-200 text-gray-700';
    default: return 'bg-gray-200 text-gray-700';
  }
};
---

<Card>
  <div class="flex items-center mb-4">
    <svg class="w-5 h-5 text-gray-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"/>
    </svg>
    <h3 class="text-lg font-semibold text-gray-900">Servicios Activos</h3>
  </div>
  
  <p class="text-sm text-gray-600 mb-6">Estado actual de todos tus servicios contratados</p>
  
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    {services.map(service => (
      <Card shadow={false} className="border border-gray-200">
        <div class="p-4">
          <div class="flex items-start justify-between mb-3">
            <div>
              <h4 class="font-semibold text-gray-900">{service.name}</h4>
              <p class="text-sm text-gray-600">{service.description}</p>
            </div>
            <span class={`text-xs px-2 py-1 rounded-full ${getStatusStyle(service.status)}`}>
              {service.status}
            </span>
          </div>

          <div class="space-y-2">
            <div class="flex justify-between text-sm">
              <span class="text-gray-500">Fecha de contratación:</span>
              <span class="font-medium">{service.startDate}</span>
            </div>
            <div class="flex justify-between text-sm">
              <span class="text-gray-500">Fecha de término:</span>
              <span class="font-medium">{service.endDate}</span>
            </div>
          </div>
        </div>
      </Card>
    ))}
  </div>
</Card>
