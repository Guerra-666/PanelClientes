---
import Card from '../Card.astro';

export interface Props {
  services: Array<{
    name: string;
    description: string;
    status: 'Activo' | 'Entregado' | 'Inactivo';
    startDate: string;
    endDate: string;
  }>;
}

const { services } = Astro.props;

// Badge styles segÃºn shadcn/ui
const getStatusBadgeClasses = (status: string) => {
  const baseClasses = "inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2";
  
  switch (status) {
    case "Activo":
      return `${baseClasses} border-transparent bg-green-500 text-green-50 hover:bg-green-500/80`;
    case "Entregado":
      return `${baseClasses} border border-gray-400 text-gray-600 bg-transparent hover:bg-gray-50`;
    case "Inactivo":
      return `${baseClasses} bg-gray-200 text-gray-700 hover:bg-gray-300`;
    default:
      return `${baseClasses} bg-gray-200 text-gray-700 hover:bg-gray-300`;
  }
};
---

<Card className="lg:col-span-3">
  <!-- Card Header -->
  <div class="p-8 pb-0">
    <h3 class="text-xl font-bold text-gray-900 flex items-center mb-3">
      <svg class="h-6 w-6 mr-3 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      Servicios Activos
    </h3>
    <p class="text-base text-muted-foreground mb-8">Estado de todos los servicios contratados</p>
  </div>
  
  <!-- Card Content -->
  <div class="px-8 pb-8">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {services.map((service) => (
        <div class="border border-gray-200 rounded-lg p-6 hover:bg-gray-50 transition-colors">
          <div class="flex items-start justify-between mb-4">
            <div class="flex-1">
              <div class="flex items-center space-x-3 mb-3">
                <h4 class="text-lg font-semibold text-gray-900">{service.name}</h4>
                <span class={getStatusBadgeClasses(service.status)}>
                  {service.status}
                </span>
              </div>
              <p class="text-base text-gray-600">{service.description}</p>
            </div>
          </div>
          
          <div class="space-y-3 text-base">
            <div class="flex justify-between">
              <span class="text-gray-500">Inicio:</span>
              <span class="font-medium text-gray-900">{service.startDate}</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-500">Fin:</span>
              <span class="font-medium text-gray-900">{service.endDate}</span>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</Card>