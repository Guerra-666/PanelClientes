---
import Card from '../Card.astro';

export interface Props {
  clientData: {
    empresa: string;
    contacto: string;
    email: string;
    telefono: string;
    fechaRegistro: string;
  };
}

const { clientData } = Astro.props;
---

<Card className="lg:col-span-1">
  <div class="flex items-center mb-6">
    <svg class="w-5 h-5 text-gray-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
    </svg>
    <h3 class="text-lg font-semibold text-gray-900">Información del Cliente</h3>
  </div>
  
  <div class="space-y-4">
    <div>
      <label class="text-sm font-medium text-gray-500">Empresa</label>
      <p class="text-sm font-semibold text-gray-900">{clientData.empresa}</p>
    </div>
    <div>
      <label class="text-sm font-medium text-gray-500">Contacto</label>
      <p class="text-sm text-gray-900">{clientData.contacto}</p>
    </div>
    <div>
      <label class="text-sm font-medium text-gray-500">Email</label>
      <p class="text-sm text-gray-900">{clientData.email}</p>
    </div>
    <div>
      <label class="text-sm font-medium text-gray-500">Teléfono</label>
      <p class="text-sm text-gray-900">{clientData.telefono}</p>
    </div>
    <div>
      <label class="text-sm font-medium text-gray-500">Fecha de Registro</label>
      <p class="text-sm text-gray-900">{clientData.fechaRegistro}</p>
    </div>
  </div>
</Card>
