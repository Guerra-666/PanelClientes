---
import Card from '../Card.astro';

export interface Props {
  clientData: {
    empresa: string;
    contacto: string;
    email: string;
    telefono: string;
    fechaRegistro: string;
  };
}

const { clientData } = Astro.props;
---

<Card className="lg:col-span-1">
  <!-- Card Header -->
  <div class="p-8 pb-0">
    <h3 class="text-xl font-bold text-gray-900 flex items-center mb-8">
      <svg class="h-6 w-6 mr-3 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
      </svg>
      Información del Cliente
    </h3>
  </div>
  
  <!-- Card Content -->
  <div class="px-8 pb-8">
    <div class="space-y-6">
      <div>
        <label class="text-base font-medium text-gray-500 block mb-2">Empresa</label>
        <p class="text-base font-semibold text-gray-900">{clientData.empresa}</p>
      </div>
      <div>
        <label class="text-base font-medium text-gray-500 block mb-2">Contacto</label>
        <p class="text-base text-gray-900">{clientData.contacto}</p>
      </div>
      <div>
        <label class="text-base font-medium text-gray-500 block mb-2">Email</label>
        <p class="text-base text-gray-900">{clientData.email}</p>
      </div>
      <div>
        <label class="text-base font-medium text-gray-500 block mb-2">Teléfono</label>
        <p class="text-base text-gray-900">{clientData.telefono}</p>
      </div>
      <div>
        <label class="text-base font-medium text-gray-500 block mb-2">Fecha de Registro</label>
        <p class="text-base text-gray-900">{clientData.fechaRegistro}</p>
      </div>
    </div>
  </div>
</Card>
