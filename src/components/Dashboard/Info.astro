---
// InfoCard.astro - Tarjeta de informaci√≥n del cliente
import Card from '../Card.astro';

export interface Props {
  title: string;
  icon?: string;
  data: Array<{
    label: string;
    value: string;
    type?: 'text' | 'email' | 'phone' | 'date';
  }>;
}

const { title, icon, data } = Astro.props;
---

<Card title={title}>
  <div class="space-y-4">
    {data.map(item => (
      <div class="flex flex-col space-y-1">
        <dt class="text-sm font-medium text-gray-500">{item.label}</dt>
        <dd class="text-sm text-gray-900">
          {item.type === 'email' ? (
            <a href={`mailto:${item.value}`} class="text-blue-600 hover:text-blue-800">
              {item.value}
            </a>
          ) : item.type === 'phone' ? (
            <a href={`tel:${item.value}`} class="text-blue-600 hover:text-blue-800">
              {item.value}
            </a>
          ) : (
            item.value
          )}
        </dd>
      </div>
    ))}
  </div>
</Card>